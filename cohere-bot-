app.post("/webhook", async (req, res) => {
  const events = req.body.events;
  for (const event of events) {
    if (event.type === "message" && event.message.type === "text") {
      const userMessage = event.message.text;

      const response = await axios.post(
        "https://api.cohere.ai/v1/generate",
        {
          model: "command-r",
          prompt: `
ã‚ãªãŸã¯æ•´å½¢å¤–ç§‘è²©å£²ä»£ç†åº—ã®ç—…é™¢æ‹…å½“AIã§ã™ã€‚
æ¬¡ã®æ¥­å‹™ãƒ«ãƒ¼ãƒ«ã«åŸºã¥ã„ã¦ç¤¾å“¡ã®è³ªå•ã«ç­”ãˆã¦ãã ã•ã„ã€‚

${RULES}

è³ªå•: ${userMessage}
ç­”ãˆ:
          `,
          max_tokens: 200,
          temperature: 0.3,
        },
        { headers: { Authorization: `Bearer ${COHERE_API_KEY}` } }
      );

      const answer = response.data.generations[0].text.trim();

      await axios.post(
        "https://api.line.me/v2/bot/message/reply",
        {
          replyToken: event.replyToken,
          messages: [{ type: "text", text: answer }],
        },
        { headers: { Authorization: `Bearer ${LINE_CHANNEL_ACCESS_TOKEN}` } }
      );
    }
  }
  res.sendStatus(200);
});

app.listen(3000, () => console.log("ðŸš€ Bot is running on port 3000"));
