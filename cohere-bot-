import express from "express";
import axios from "axios";

const app = express();
app.use(express.json());

const LINE_CHANNEL_ACCESS_TOKEN = process.env.LINE_CHANNEL_ACCESS_TOKEN;
const COHERE_API_KEY = process.env.COHERE_API_KEY;

const RULES = `
